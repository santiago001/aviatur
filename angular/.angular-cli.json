{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "aviatur"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "css/bootstrap/css/bootstrap.min.css",
        "css/metisMenu/metisMenu.min.css",
        "css/dist/css/sb-admin-2.css",
        "css/morrisjs/morris.css",
        "css/font-awesome/css/font-awesome.min.css"
      ],
      "scripts": [  
        "css/jquery/jquery.min.js",
        "css/bootstrap/js/bootstrap.min.js",
        "css/metisMenu/metisMenu.min.js",
        "css/raphael/raphael.min.js",
        "css/morrisjs/morris.min.js",
        "css/data/morris-data.js",
        "css/dist/js/sb-admin-2.js",
        "css/datatables/js/dataTables.min.js",
        "js/validacionesmarca.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}
